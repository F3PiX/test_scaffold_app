<p id="notice"><%= notice %></p>

<h1>Controller Things</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @controller_things.each do |controller_thing| %>
      <tr>
        <td><%= link_to 'Show', controller_thing %></td>
        <td><%= link_to 'Edit', edit_controller_thing_path(controller_thing) %></td>
        <td><%= link_to 'Destroy', controller_thing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Controller Thing', new_controller_thing_path %>
